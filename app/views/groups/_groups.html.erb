<ul class="list-unstyled">
  <% groups.each do |group| %>
    <li class="media border-bottom">
      <div class="media-body">
        <div>
          <%= link_to group.name, group_path(group) %>
        </div>
        <div class="row mt-3">
          <span class="ml-3">
            <%= render 'group_users/join_button', group: group %>
          </span>
          <span class="ml-1">
            <% if current_user == group.user %>
              <%= link_to "編集", edit_group_path(group), class: 'btn btn-primary btn-sm' %>
            <% end %>
          </span>
          <span class="ml-1">
            <% if current_user == group.user %>
              <%= link_to "消去", group, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </span>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate groups %>
</ul>