<%= form_with(model: @group, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'グループ名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="row">
    <div class="col-sm-2 offset-sm-8">
      <%= link_to 'キャンセル', groups_path, class: "btn btn-link btn-block" %>
    </div>
    <div class="col-sm-2">
      <%= f.submit 'グループ作成', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>