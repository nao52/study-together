<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media border-bottom">
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></span>
        </div>
        <div>
          <p><%= post.content %></p>
        </div>
        <span>
          <% if current_user == post.user %>
            <%= link_to "編集", edit_post_path(post), class: 'btn btn-primary btn-sm' %>
          <% end %>
        </span>
        <span>
          <% if current_user == post.user %>
            <%= link_to "消去", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </span>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>