<div class="row border p-3">
  <div class="col-sm-2 border">
    <ul class="list-unstyled mt-3">
      <li class="mt-3"><a href="#">Follow一覧</a></li>
      <li class="mt-3"><a href="#">Follower一覧</a></li>
      <li class="mt-3"><a href="#">お気に入り一覧</a></li>
      <li class="mt-3"><a href="#">参加グループ一覧</a></li>
      <li class="mt-3"><%= link_to 'ユーザ一覧', users_path %></li>
      <li class="mt-3"><a href="#">投稿一覧</a></li>
      <li class="mt-3"><a href="#">グループ一覧</a></li>
    </ul>
  </div>
  <div class="col-sm-10 p-3 border">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :goal, '目標' %>
        <%= f.text_field :goal, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :status, 'プロフィール' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>

      <div class="col-sm-4 offset-sm-4 mb-3">
      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
      </div>
      
      <div class="col-sm-4 offset-sm-8 text-right">
        <%= link_to 'プロフィール詳細に戻る', user_path %>
      </div>
    <% end %>
  </div>
</div>