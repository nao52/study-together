    <ul class="list-unstyled mt-3">
      <%= render 'layouts/link_list' %>
    </ul>
  </aside>
  <div class="col-sm-10 border-left">
    <ul class="nav nav-pills nav-justified mb-3">
      <li class="nav-item"><a href="<%= posts_path %>" class="nav-link <%= 'active' if current_page?(posts_path) %>">投稿一覧</a></li>
      <li class="nav-item"><a href="<%= users_path %>" class="nav-link <%= 'active' if current_page?(users_path) %>">ユーザ一覧</a></li>
      <li class="nav-item"><a href="<%= groups_path %>" class="nav-link <%= 'active' if current_page?(groups_path) %>">グループ一覧</a></li>
    </ul>
    <div>
      <div class="row col-sm-10">
        <%= render 'users', users: @users %>
      </div>
    </div>
  </div>
</div>