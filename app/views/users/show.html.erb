<div class="row border p-3">
  <aside class="col-2">
    <%= render 'layouts/link_list' %>
    <% if current_user == @user %>
      <ul class="list-unstyled mt-3">
        <li class="mt-3"><%= link_to 'ユーザの削除', @user, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></li>
      </ul>
    <% end %>
  </aside>
  <div class="col-10 border-left">
    <div class="row p-3">
      <div class="col-4">
        <h4 class="text-left">ユーザ：<%= @user.name %></h4>
      </div>
      <div class="col-3 offset-5">
        <% if current_user == @user %>
          <%= link_to 'プロフィール編集', edit_user_path, class: "btn btn-light"%></li>
        <% end %>
      </div>
    </div>
    <div class="row border rounded m-3">
      <h5 class="col-sm-12 mt-3"><%= @user.name %>の目標</h5>
      <h6 class="col-sm-12 mt-3"><%= @user.goal%></h6>
      <h5 class="col-sm-12 mt-5"><%= @user.name %>のプロフィール</h5>
      <h6 class="col-sm-12 mt-3 mb-3"><%= @user.status %></h6>
    </div>
    <ul class="nav nav-pills nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿</a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">お気に入り</a></li>
      <li class="nav-item"><a href="<%= joinings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(joinings_user_path(@user)) %>">参加グループ</a></li>
    </ul>
    <div class="row m-3">
      <%= render 'posts/posts', posts: @posts %>
    </div>
  </div>
</div>